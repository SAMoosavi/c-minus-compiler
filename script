#!/bin/bash

set -e

ANTLR_JAR="antlr-4.13.1-complete.jar"
INPUT_FILE="input.txt"
ANTLR_OUT="ANTLR_p1.txt"
SCANNER_OUT="tokens.txt"

function setup() {
  echo "ğŸ”§ Creating virtual environment if not exists..."
  python3 -m venv venv
  source venv/bin/activate

  echo "â¬†ï¸ Upgrading pip..."
  pip install --upgrade pip

  echo "ğŸ“¦ Installing Python dependencies..."
  pip install -r ./requirements.txt

  if [ -f "$ANTLR_JAR" ]; then
    echo "âœ… $ANTLR_JAR already exists, skipping download."
  else
    echo "ğŸ“¥ Downloading ANTLR4 jar..."
    curl -O https://www.antlr.org/download/$ANTLR_JAR
  fi

  echo "ğŸ”§ Setting up aliases (will be added to ~/.bashrc if not present)..."
  if ! grep -q "$ANTLR_JAR" ~/.bashrc; then
    echo "export CLASSPATH=\".:$(pwd)/$ANTLR_JAR:\$CLASSPATH\"" >>~/.bashrc
    echo "alias antlr4='java -jar $(pwd)/$ANTLR_JAR'" >>~/.bashrc
    echo "alias grun='java org.antlr.v4.gui.TestRig'" >>~/.bashrc
    echo "âœ… Aliases added to ~/.bashrc"
  else
    echo "âœ… Aliases already configured in ~/.bashrc"
  fi

  echo "âœ… Setup complete! Run 'source ~/.bashrc' to apply changes."
}

function run() {
  echo "ğŸ” Cleaning old files..."
  rm -f CMinus*.py $ANTLR_OUT $SCANNER_OUT

  echo "âš™ï¸ Running ANTLR on CMinus.g4 CMinusParser.g4..."
  java -jar $ANTLR_JAR -Dlanguage=Python3 CMinus.g4
  java -jar $ANTLR_JAR -Dlanguage=Python3 CMinusParser.g4

  echo "ğŸ“¦ Activating virtual environment..."
  source ./venv/bin/activate

  echo "ğŸ“¦ Running ANTLR-generated lexer..."
  python3 run_antlr_parser.py
}

# Parse arguments
case "$1" in
  -s|--setup)
    setup
    ;;
  -r|--run)
    run
    ;;
  *)
    echo "Usage: $0 {-s|--setup | -r|--run}"
    exit 1
    ;;
esac
